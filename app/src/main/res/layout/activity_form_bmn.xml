<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:textSize="20dp"
            android:textColor="#FFF"
            android:text="FORM ASSET BMN"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark"

            >
        </View>

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="252dp"
            android:layout_alignBottom="@+id/tvCurrentPos"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            map:cameraZoom="10"
            tools:context="com.example.styledmap.MapsActivityRaw" />

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/nomor_asset"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/kegiatan"
                android:drawableTint="@color/colorPrimaryDark"
                android:hint="Nomor ASSET"
                android:singleLine="true"
                android:enabled="false"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/etdeskripsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/kegiatan"
                android:drawableTint="@color/colorPrimaryDark"
                android:hint="Deskripsi Asset"
                android:singleLine="true"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/jumlah"
                android:inputType="number"
                android:textAlignment="center"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/kegiatan"
                android:drawableTint="@color/colorPrimaryDark"
                android:hint="Jumlah"
                android:singleLine="true"/>

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:textSize="8pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Satuan"
            android:drawableTint="@color/colorPrimaryDark"
            android:drawableLeft="@drawable/subtitles"/>

        <Spinner
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/satuan"
            />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/kelas"
                android:inputType="numberDecimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/kegiatan"
                android:drawableTint="@color/colorPrimaryDark"
                android:hint="Kelas"
                android:singleLine="true"
                android:enabled="false"/>

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/merk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/kegiatan"
                android:drawableTint="@color/colorPrimaryDark"
                android:hint="Merk Barang"
                android:singleLine="true"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/tahun_perolehan"
                android:inputType="numberDecimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/kegiatan"
                android:drawableTint="@color/colorPrimaryDark"
                android:hint="Tahun Perolehan"
                android:singleLine="true"/>

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:textSize="8pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Digunakan Oleh"
            android:drawableTint="@color/colorPrimaryDark"
            android:drawableLeft="@drawable/subtitles"/>

        <Spinner
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_fungsi"
            />


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/lokasi_asset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/kegiatan"
                android:drawableTint="@color/colorPrimaryDark"
                android:hint="Lokasi Asset"
                android:singleLine="true"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/klasifikasi_asset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/kegiatan"
                android:drawableTint="@color/colorPrimaryDark"
                android:hint="Klasifikasi Lokasi"
                android:singleLine="true"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/lokasi_tahun_sebelumnya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/kegiatan"
                android:drawableTint="@color/colorPrimaryDark"
                android:hint="Lokasi Tahun Sebelumnya"
                android:singleLine="true"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/regional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/kegiatan"
                android:drawableTint="@color/colorPrimaryDark"
                android:hint="Regional"
                android:singleLine="true"
                android:enabled="false"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/lock"
                android:hint="Field"
                android:singleLine="true"
                android:enabled="false"></EditText>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/kpknl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/lock"
                android:hint="KPKNL"
                android:singleLine="true"
                android:enabled="false"></EditText>

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:textSize="8pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kondisi Asset"
            android:drawableTint="@color/colorPrimaryDark"
            android:drawableLeft="@drawable/subtitles"/>

        <Spinner
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/kondisi"
            android:id="@+id/kondisi"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:textSize="8pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Digunakan Oleh"
            android:drawableTint="@color/colorPrimaryDark"
            android:drawableLeft="@drawable/subtitles"/>

        <Spinner
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/digunakan_oleh"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp" >

            <ImageButton
                app:srcCompat="@drawable/alert"
                android:background="@null"

                android:id="@+id/btnCamera"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "/>

            <ImageButton
                android:background="@null"

                android:id="@+id/btnGallery"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


        </LinearLayout>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    Ambil gambar. (Klik ikon kamera/galeri diatas)"/>

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/ivImageCompress"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:contentDescription="image"
            android:visibility="gone"
            />

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/ivImageCompress2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:contentDescription="image"
            android:visibility="gone"
            />

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/ivImageCompress3"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:contentDescription="image"
            android:visibility="gone"
            />

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/ivImageCompress4"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:contentDescription="image"
            android:visibility="gone"
            />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:inputType="textMultiLine"
                android:id="@+id/etket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/subtitles"
                android:drawableTint="@color/colorPrimaryDark"
                android:hint="Keterangan (catatan)"
                android:singleLine="true"/>

        </android.support.design.widget.TextInputLayout>



        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvlat"
                android:layout_weight="0.5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Lat : membaca lokasi..."/>

            <TextView
                android:id="@+id/tvlng"
                android:layout_weight="0.5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Lng : membaca lokasi..."/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp" >

            <Button
                android:background="@color/colorPrimaryDark"
                android:textColor="#FFF"
                android:id="@+id/btkirim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.39"
                android:text="KIRIM" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  "/>

            <Button
                android:background="#dfdddd"
                android:id="@+id/btbatal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.39"
                android:text="BATAL" />


        </LinearLayout>

    </LinearLayout>

</ScrollView>